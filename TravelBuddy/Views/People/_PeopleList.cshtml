@model List<TravelBuddy.Models.UserListViewModel>

<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card p-3">
                <div class="d-flex align-items-center">
                    <img src="@user.ProfilePictureUrl" class="rounded-circle mr-3" alt="Фото профиля" style="width: 50px; height: 50px;">
                    <div>
                        <h5 class="mb-0">@user.FullName</h5>
                        <small>Возраст: @user.Age ?? "Не указан"</small><br />
                        <small>Город: @user.City ?? "Не указан"</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
