@model List<Hotel>

<h2>Результаты поиска</h2>

@if (!Model.Any())
{
    <p>Отели не найдены.</p>
}
else
{
    <div class="row">
        @foreach (var hotel in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@hotel.ImageUrl" class="card-img-top" alt="@hotel.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@hotel.Name</h5>
                        <p class="card-text">@hotel.Address</p>
                        <p class="card-text"><strong>Цена:</strong> @hotel.Price руб.</p>
                        <p class="card-text"><strong>Рейтинг:</strong> @hotel.Rating</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
