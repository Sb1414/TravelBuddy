@model TravelBuddy.Models.ProfileViewModel

<h2>Мой профиль</h2>

<form asp-action="Profile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Фото профиля</label>
        <div>
            <img src="@Model.ProfilePictureUrl" alt="Фото профиля" width="150" height="150" class="rounded-circle" />
        </div>
        <input type="file" asp-for="ProfilePicture" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PassportSeries"></label>
        <input asp-for="PassportSeries" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PassportNumber"></label>
        <input asp-for="PassportNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>