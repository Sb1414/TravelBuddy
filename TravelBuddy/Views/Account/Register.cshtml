@model TravelBuddy.Models.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white">
                <div class="row no-gutters">
                    <!-- Левая часть: форма регистрации -->
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Создайте аккаунт</h5>
                            <form asp-action="Register" method="post">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control bg-secondary text-white" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control bg-secondary text-white" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" class="form-control bg-secondary text-white" type="password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Зарегистрироваться</button>
                            </form>
                        </div>
                    </div>
                    <!-- Правая часть: изображение -->
                    <div class="col-md-6 d-none d-md-block">
                        <img src="~/images/login-image.jpg" class="card-img" alt="TravelBuddy Image" style="object-fit: cover; height: 100%;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
