<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TravelBuddy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/custom.css"/>
    <link rel="stylesheet" href="~/css/custom-background.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TravelBuddy.styles.css" asp-append-version="true"/>
</head>
<body>
<!-- Фоновое изображение и фигуры -->
<div class="background-container">
    <img src="~/images/back_photo.png" alt="Background Image" class="background-image">
    <div class="background-shape shape-1 @(ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Login" ? "lightened" : "")"></div>
    <div class="background-shape shape-2"></div>
    <div class="background-shape shape-3"></div>
    <div class="background-shape shape-4 @(ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Profile" ? "lightened" : "")"></div>
</div>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TravelBuddy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" data-shape="shape-1">О нас</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Route" asp-action="Routes">Маршруты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#hostels" data-shape="shape-3">Гостиницы</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="People" asp-action="Peoples">Люди</a>
                    </li>

                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - TravelBuddy
    </div>
</footer>
<script src="~/js/custom-background.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
